import java.util.Arrays;
import java.util.Scanner;

public class p4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int n=sc.nextInt();
		int k=sc.nextInt();
		int[] arr=new int [n];
		int sum=0;
		for(int i=0;i<n;i++) {
			arr[i]=sc.nextInt();
			sum+=arr[i];
		}
		Arrays.sort(arr);
		
		if(n==k) {
			System.out.println(sum);
		}
		else {
			sum=0;
			int j=1;
			int r=0;
			for(int i=0;i<=n;i++) {
				if(j<=k) {
					
				System.out.println("dg");
					sum+=(r+1)*arr[arr.length-(i+1)];
					System.out.println(r+" r "+arr[arr.length-(i+1)]+" arr "+" "+sum+" dgd");
					
				}
				else {
					System.out.println("h");
					if(j==k+1) {
						r++;
						j=1;
					}
					
				}
				
				j++;
			}
			System.out.println(sum);
		}
	}

}
