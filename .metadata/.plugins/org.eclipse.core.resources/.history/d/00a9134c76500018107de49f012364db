import java.util.Scanner;

public class FakebinarySearch {
	static int binarySearch(int arr[], int n ,int x)
    {
		int low, high, mid=0;
	    low =0;
	    high = n-1;
        while (high>=low)
        {
             mid = (low + high) / 2;
             if( arr[mid] == x) {
                 break;
                 }
             else if (arr[mid] < x){
                 low = mid+1;
                 }
             else {
                 high = mid-1;
             }
        }
         return mid;
             
        }
     
    
	public static void main(String args[]) {

		int arr[]= {3,1,6,7,2,5,4};
		System.out.println(binarySearch(arr,arr.length,7));
		

	}
}
