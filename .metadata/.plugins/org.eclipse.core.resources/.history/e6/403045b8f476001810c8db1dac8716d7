import java.util.Arrays;
import java.util.Scanner;

public class p4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int n=sc.nextInt();
		int k=sc.nextInt();
		int[] arr=new int [n];
		int sum=0;
		for(int i=0;i<n;i++) {
			arr[i]=sc.nextInt();
			sum+=arr[i];
		}
		Arrays.sort(arr);
		sum=0;
		if(n==k) {
			System.out.println(sum);
		}
		else {
			int j=1;
			for(int i=n-1;i>=0;i--) {
				if(j<=k) {
				
				}
				else {
					j=1;
				}
				sum+=(j+1)*arr[i];
				j++;
			}
			System.out.println(sum);
		}
	}

}
