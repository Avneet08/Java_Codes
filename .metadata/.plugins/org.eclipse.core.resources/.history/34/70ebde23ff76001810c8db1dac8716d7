import java.util.*;

public class p4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int n=sc.nextInt();
		int k=sc.nextInt();
		Integer[] arr=new Integer [n];
		int sum=0;
		for(int i=0;i<n;i++) {
			arr[i]=sc.nextInt();
			sum+=arr[i];
		}
		Arrays.sort(arr, Collections.reverseOrder());
		int[] ti = new int[k];
		if(n==k) {
			System.out.println(sum);
		}
		else {
		
			sum=0;
			int r=0;
			int i=0;
		while(i<n){
				 if(r>=k){
					 r = 0;
				 }
				if(i<k){sum += arr[i];
					 ti[r] = 1;
					 r++;
				 }
				 else{
					 
					 sum += (arr[i] * (ti[r]+1));
					 r++;
				 }
				 i++;
				 }
			System.out.println(sum);
	}
		}
}
