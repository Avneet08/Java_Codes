import java.util.ArrayList;
import java.util.LinkedList;
import java.util.Scanner;

public class LandLeveling {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		 Scanner sc = new Scanner(System.in);
		 int n=sc.nextInt();
		 int k=sc.nextInt();
		 ArrayList<Integer> arr=new ArrayList<Integer>();
		 for(int i=0;i<n;i++) {
			 arr.add(sc.nextInt());
		 }
		 LinkedList<Integer> q = new LinkedList<Integer>();
	       int  i =0;
	        while(i < k) {
	            while(!q.isEmpty() && arr.get(i) <= arr.get(q.peekLast())){
	                q.removeLast();
	            }
	            q.addLast(i);
	            i++;
	        }
	        i = k;
	        int min[] = new int[n-k+1];
	        while(i < n) {
	            min[i-k] = arr.get(q.peek());
	            while (!q.isEmpty() && q.peek() <= i-k){
	                q.removeFirst();
	            }
	            while (!q.isEmpty() && arr.get(i) <= arr.get(q.peekLast())){
	                q.removeLast();
	            }
	            q.addLast(i);
	            i++;
	        }
	        min[n-k] = arr.get(q.peek());
	      
	        long minn = Long.MAX_VALUE;
	        i =0;
	        while(i <= n-k) {
	            long sum = 0;
	            int j = i;
	            while(j < i+k) {
	                sum = sum + arr.get(j)- min[i];
	                j++;
	            }
	            minn = Math.min(sum, minn);
	            i++;
	        }
	        System.out.println(minn);
		 
	}

}
