import java.math.BigInteger;
import java.util.Arrays;
import java.util.Scanner;

public class r4 {
	static int N=0;
	public static void main(String args[]) {
		try {
			
			Scanner sc = new Scanner(System.in); 
			  int T = sc.nextInt(); 
			  for (int j = 0; j< T; j++) { 
				  int M = sc.nextInt(); 
				   N = sc.nextInt(); 
				  long arr[] = new long[M]; 
				  long arr2[] = new long[M]; 
				  long sum1=0;
				  long sum2=0;
				  for (int i = 0; i < M; i++) { 
					  arr[i] =sc.nextLong(); 
					  sum1+=arr[i];
					 
					  } 
				  for (int i = 0; i < M; i++) { 
					  arr2[i] = sc.nextLong(); 
					  sum2+=arr2[i];
				  }
				  
				//  BigInteger n=fib(sum1*M, sum2*M,  N);
				  fib(sum1*M, sum2*M,  N);
					BigInteger x=new BigInteger("1000000007");
					//System.out.println(n.mod(x));
				  }
			
 
		} catch (Exception e) {
			return;
		}
 
	}
 
	public static BigInteger calculatefib(long sum1,long sum2, int N) {
 
	
		BigInteger result=new BigInteger("0");
		//
		
				BigInteger[] fib = new BigInteger[1+Math.max(2,N)];
				fib[0]=BigInteger.valueOf(sum1);
				fib[1]=BigInteger.valueOf(sum2);
				//System.out.println("sequence is"+fib[0]+" "+fib[1]);
				for(int k=2;k<N;k++) {
					fib[k] = fib[k - 1] .add(fib[k - 2]) ;
				}
				//System.out.println("ssv"+fib[N-1]);
				 result = result .add(fib[N-1]) ;
		
		return result;
		}
	
	 //static int MAX = 1000000000;
	    
	 
	    public static BigInteger fib(long sum1,long sum2,int n)
	    
	    {System.out.println(sum1+" "+sum2+" "+n);
	    BigInteger f[]=new BigInteger[1+Math.max(2, N)];
	    f[0]=BigInteger.valueOf(sum1);
	    f[1]=BigInteger.valueOf(sum2);
	 
	        if (n == 0) {
	        	System.out.println("ys"+f[0]);
	            return f[0];
	        } 
	        if (n == 1 ) {
	        	System.out.println("sy"+f[1]);
	           return f[1];
	        }
	        if(!f[n].equals(0)) {
	        	System.out.println(f[n]+"suh");
	        	return f[n];
	        }
	        System.out.println("sbhdb");
	        	if(n%2==0) {
	        		System.out.println("hid");
	        		int k=n/2;
	        		f[n]=((f[(int) (k-1)].multiply(BigInteger.valueOf(2)).add(f[k])).multiply(f[k]));
	        	}
	        	else {
	        		System.out.println("hid2");
	        		long k=(n+1)/2;
	        		BigInteger u=f[(int) k].multiply(f[(int) k]);
	        		BigInteger v=f[(int) (k-1)].multiply(f[(int) (k-1)]);
	        		f[n]=u.add(v);
	        		System.out.println(f[n]);
	        	}
	      System.out.println("sjsb"+f[n]);
	        return f[n];
	    }
	     
	
}
