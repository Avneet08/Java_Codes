package src2;

import java.math.BigInteger;
import java.util.Scanner;

public class sahil2_2 {

	static int pos = -1,count1=0;
	public static void count(String s ) {
		 for(int i=0;i<s.length();i++)
         {
             if(s.charAt(s.length()-i-1)=='1')
             {
                 count1++;
                 if(pos==-1)
                     pos=i;
             }
         }
	}
	public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        BigInteger N = in.nextBigInteger().add(new BigInteger("1"));
        int k = in.nextInt();
        while(true)
        {
            String s = N.toString(2);
            
           count(s);
            if(count1==k)
            {
                System.out.println(N);
                break;
            }
            else if(k-count1<=pos   )
            	if(k-count1>0){
            {
                BigInteger a = BigInteger.ZERO;
                int i=0;
                while(i<k-count1)
                {
                    a = a.multiply(new BigInteger("2"));
                    		a=a.add(BigInteger.ONE);
                    		i++;
                }
                N = N.add(a);
                System.out.println(N);
                break;

            }
            	}
            else
            {
                N = N.add(BigInteger.valueOf((long)Math.pow(2,pos)));
            }

        }
    }

}
