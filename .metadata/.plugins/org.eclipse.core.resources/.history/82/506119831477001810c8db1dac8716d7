import java.util.Arrays;
import java.util.Collections;
import java.util.Scanner;

public class sah {



	

		public static void main(String[] args) {
			// TODO Auto-generated method stub
			Scanner sc = new Scanner(System.in);
			
			int tnum = sc.nextInt();
			int fnum = sc.nextInt();
			Integer[] oprice = new Integer[tnum];
			int[] times = new int[fnum];
			for(int i =0;i<tnum;i++){
				oprice[i] = sc.nextInt();
			}

			Arrays.sort(oprice, Collections.reverseOrder());
			 int total = 0;
			 int findex = 0;
			 for(int i = 0;i<tnum;i++){
				 if(findex>=fnum){
					 findex = 0;
				 }
				 
				 if(i<fnum){
					 total = total + oprice[i];
					 times[findex] = 1;
					 findex++;
				 }
				 else{
					 times[findex] = times[findex] + 1;
					 total = total + (oprice[i] * times[findex]);
					 findex++;
				 }
//				 System.out.println(total);
			 }
			 System.out.println(total);

		}

	}

