package src2;

import java.io.IOException;
import java.math.BigInteger;
import java.util.Scanner;

public class sahil_2 {


	public static int count(String s, char c)
    {
        int res = 0;
 
        for (int i=0; i<s.length(); i++)
        {
            if (s.charAt(i) == c)
            res++;
        } 
        return res;
    }
    
	static int flag = 0;
