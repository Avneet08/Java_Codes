import java.util.*;
import java.io.*;

public class p4 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int k = sc.nextInt();
		
		
		int sum=0;
		Integer[] arr = new Integer[n];
		for(int i =0;i<n;i++){
			arr[i] = sc.nextInt();
			sum+=arr[i];
		}
		Integer[] rough = new Integer[k];
		Arrays.sort(arr, Collections.reverseOrder());
		if(n==k) {
			System.out.println(sum);
			}
		else {
		  sum = 0;
		 int r = 0;
		 for(int i = 0;i<n;i++){
			 if(r>=k){
				 r = 0;
			 }
			 
			 if(i<k){
				 sum += arr[i];
				 rough[r] = 1;
				 r++;
			 }
			 else{
				 rough[r] ++;
				 sum +=(arr[i] * rough[r]);
				 r++;
			 }

		 }
		 System.out.println(sum);
		}
	}

	}

