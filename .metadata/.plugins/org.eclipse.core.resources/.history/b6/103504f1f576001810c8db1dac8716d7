import java.util.Arrays;
import java.util.Scanner;

public class p4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int n=sc.nextInt();
		int k=sc.nextInt();
		int[] arr=new int [n];
		int sum=0;
		for(int i=0;i<n;i++) {
			arr[i]=sc.nextInt();
			sum+=arr[i];
		}
		Arrays.sort(arr);
		
		if(n==k) {
			System.out.println(sum);
		}
		else {
			sum=0;
			int j=1;
			for(int i=n-1;i>=0;i--) {
				if(j<=k) {
					//System.out.println(sum+" dgd");
					sum+=((j-1)+1)*arr[i];
					System.out.println(sum+" 45dgd");
					
				}
				else {
					j=1;
					System.out.println("j "+ sum+" dgd");
					sum+=((j-1)+1)*arr[i];
					System.out.println("dhd "+sum+" 45dgd");
				}
				
				j++;
			}
			System.out.println(sum);
		}
	}

}
